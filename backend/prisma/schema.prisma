generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String   @id @default(uuid())
  email             String   @unique
  password          String
  name              String
  role              Role     @default(INDIVIDUAL)
  stripeCustomerId  String?  @unique
  subscriptionId    String?
  subscriptionStatus String?
  storageUsed       BigInt   @default(0)
  storageLimit      BigInt   @default(2147483648)
  profilePicture    String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  
  items             Item[]
  campaigns         Campaign[]
  teamMembers       TeamMember[]
  feedback          Feedback[]
  chatConversations ChatConversation[]
  
  @@index([email])
}

enum Role {
  INDIVIDUAL
  ORG_SMALL
  ORG_MEDIUM
  ORG_ENTERPRISE
  ADMIN
}

model Item {
  id           String    @id @default(uuid())
  userId       String
  slug         String    @unique
  title        String
  description  String?
  type         MediaType
  mediaUrl     String
  qrCodeUrl    String?
  thumbnailUrl String?
  fileSize     BigInt
  views        Int       @default(0)
  viewsQr      Int       @default(0)
  viewsNfc     Int       @default(0)
  viewsDirect  Int       @default(0)
  nfcEnabled   Boolean   @default(false)
  nfcUrl       String?
  
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  
  user         User      @relation(fields: [userId], references: [id])
  campaign     Campaign? @relation(fields: [campaignId], references: [id])
  campaignId   String?
  analytics    Analytics[]
  
  @@index([userId])
  @@index([slug])
}

enum MediaType {
  IMAGE
  VIDEO
  AUDIO
  TEXT
  OTHER
}

model Campaign {
  id          String   @id @default(uuid())
  slug        String   @unique
  name        String
  description String?
  category    String?
  qrCodeUrl   String?
  userId      String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  user        User     @relation(fields: [userId], references: [id])
  items       Item[]
  
  @@index([userId])
  @@index([slug])
  @@index([category])
}

model TeamMember {
  id        String   @id @default(uuid())
  email     String
  role      String
  userId    String
  invitedAt DateTime @default(now())
  
    user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

@@unique([userId, email])
  @@index([userId])
}

model Analytics {
  id        String   @id @default(uuid())
  itemId    String
  source    String   @default("direct")
  country   String?
  device    String?
  browser   String?
  os        String?
  createdAt DateTime @default(now())
  
  item      Item     @relation(fields: [itemId], references: [id], onDelete: Cascade)
  
  @@index([itemId])
  @@index([source])
  @@index([createdAt])
}

model Feedback {
  id        String   @id @default(uuid())
  userId    String
  subject   String
  message   String
  status    FeedbackStatus @default(PENDING)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([status])
  @@index([createdAt])
}

enum FeedbackStatus {
  PENDING
  REVIEWED
  RESOLVED
}

model ChatConversation {
  id            String   @id @default(uuid())
  userId        String
  status        ChatStatus @default(ACTIVE)
  lastMessageAt DateTime @default(now())
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  messages      ChatMessage[]
  
  @@index([userId])
  @@index([status])
  @@index([lastMessageAt])
}

enum ChatStatus {
  ACTIVE
  CLOSED
}

model ChatMessage {
  id             String   @id @default(uuid())
  conversationId String
  senderId       String
  senderType     SenderType
  message        String
  isRead         Boolean  @default(false)
  createdAt      DateTime @default(now())
  
  conversation   ChatConversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  
  @@index([conversationId])
  @@index([createdAt])
}

enum SenderType {
  USER
  ADMIN
}
