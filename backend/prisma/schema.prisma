generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                 String    @id @default(uuid())
  email              String    @unique
  password           String
  name               String
  role               Role      @default(INDIVIDUAL)
  stripeCustomerId   String?   @unique
  subscriptionId     String?
  subscriptionStatus String?
  priceId            String?
  currentPeriodStart DateTime?
  currentPeriodEnd   DateTime?
  storageUsed        BigInt    @default(0)
  storageLimit       BigInt    @default(2147483648)
  profilePicture     String?
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt

  resetToken         String?
  resetTokenExpiry   DateTime?

  // Enterprise features fields
  twoFactorEnabled   Boolean   @default(false)
  twoFactorSecret    String?

  // âœ… REFUND TRACKING FIELDS (Account will be deleted after refund)
  refundRequested    Boolean?   @default(false)
  refundRequestedAt  DateTime?
  refundProcessedAt  DateTime?
  refundAmount       Decimal?   @db.Decimal(10, 2)
  refundReason       String?    @db.Text
  refundStatus       String?    // 'pending', 'processed'

  items             Item[]
  campaigns         Campaign[]
  teamMembers       TeamMember[]       @relation("OrganizationMembers")
  memberOf          TeamMember[]       @relation("MemberOf")
  feedback          Feedback[]
  chatConversations ChatConversation[]

  // Enterprise features relations
  apiKeys              ApiKey[]
  whiteLabelSettings   WhiteLabelSettings?
  webhooks             Webhook[]
  integrations         Integration[]
  auditLogs            AuditLog[]

  @@index([email])
  @@index([resetToken])
}

enum Role {
  INDIVIDUAL
  ORG_SMALL
  ORG_MEDIUM
  ORG_ENTERPRISE
  ADMIN
}

model Item {
  id           String    @id @default(uuid())
  userId       String
  slug         String    @unique
  title        String
  description  String?   @db.Text
  type         MediaType
  mediaUrl     String    @db.Text
  qrCodeUrl    String?
  thumbnailUrl String?
  fileSize     BigInt
  views        Int       @default(0)
  viewsQr      Int       @default(0)
  viewsNfc     Int       @default(0)
  viewsDirect  Int       @default(0)
  nfcEnabled   Boolean   @default(false)
  nfcUrl       String?

  buttonText  String?
  buttonUrl   String?
  attachments Json?   @db.JsonB

  // âœ… NEW: Sharing control field
  sharingEnabled Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user       User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  campaign   Campaign?   @relation(fields: [campaignId], references: [id])
  campaignId String?
  analytics  Analytics[]

  @@index([userId])
  @@index([slug])
  @@index([sharingEnabled])
}

enum MediaType {
  IMAGE
  VIDEO
  AUDIO
  TEXT
  EMBED
  OTHER
}

model Campaign {
  id          String   @id @default(uuid())
  slug        String   @unique
  name        String
  description String?
  category    String?
  logoUrl     String?
  qrCodeUrl   String?
  userId      String
  
  // ðŸ”’ PASSWORD PROTECTION FIELDS
  passwordProtected Boolean  @default(false)
  passwordHash      String?
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user  User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  items Item[]

  @@index([userId])
  @@index([slug])
  @@index([category])
  @@index([passwordProtected])
}

model TeamMember {
  id           String   @id @default(uuid())
  email        String
  role         String
  userId       String
  memberUserId String?
  status       String   @default("PENDING")
  token        String?  @unique
  message      String?
  createdAt    DateTime @default(now())

  user       User  @relation(fields: [userId], references: [id], onDelete: Cascade, name: "OrganizationMembers")
  memberUser User? @relation(fields: [memberUserId], references: [id], onDelete: Cascade, name: "MemberOf")

  @@unique([userId, email])
  @@index([userId])
  @@index([memberUserId])
  @@index([token])
}

model Analytics {
  id        String   @id @default(uuid())
  itemId    String
  source    String   @default("direct")
  country   String?
  device    String?
  browser   String?
  os        String?
  createdAt DateTime @default(now())

  item Item @relation(fields: [itemId], references: [id], onDelete: Cascade)

  @@index([itemId])
  @@index([source])
  @@index([createdAt])
}

model Feedback {
  id        String         @id @default(uuid())
  userId    String
  subject   String
  message   String
  status    FeedbackStatus @default(PENDING)
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([status])
  @@index([createdAt])
}

enum FeedbackStatus {
  PENDING
  REVIEWED
  RESOLVED
}

model ChatConversation {
  id            String     @id @default(uuid())
  userId        String
  status        ChatStatus @default(ACTIVE)
  lastMessageAt DateTime   @default(now())
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt

  user     User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  messages ChatMessage[]

  @@index([userId])
  @@index([status])
  @@index([lastMessageAt])
}

enum ChatStatus {
  ACTIVE
  CLOSED
}

model ChatMessage {
  id             String     @id @default(uuid())
  conversationId String
  senderId       String
  senderType     SenderType
  message        String
  isRead         Boolean    @default(false)
  createdAt      DateTime   @default(now())

  conversation ChatConversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  @@index([conversationId])
  @@index([createdAt])
}

enum SenderType {
  USER
  ADMIN
}

// ========================================
// ENTERPRISE FEATURES MODELS
// ========================================

model ApiKey {
  id          String   @id @default(uuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  name        String
  key         String   @unique
  lastUsed    DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([userId])
  @@index([key])
}

model WhiteLabelSettings {
  id              String   @id @default(uuid())
  userId          String   @unique
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  primaryColor    String   @default("#800080")
  secondaryColor  String   @default("#EE82EE")
  accentColor     String   @default("#9333ea")
  customDomain    String?
  emailFromName   String?
  emailReplyTo    String?
  footerText      String   @default("Powered by Outbound Impact")
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Webhook {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  name      String
  url       String
  events    String[]
  active    Boolean  @default(true)
  secret    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([userId])
}

model Integration {
  id            String   @id @default(uuid())
  userId        String
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  type          String
  name          String
  config        Json
  active        Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  @@index([userId])
  @@index([type])
  @@unique([userId, type])
}

model AuditLog {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  action    String
  ipAddress String?
  location  String?
  device    String?
  metadata  Json?
  createdAt DateTime @default(now())
  
  @@index([userId])
  @@index([createdAt])
}
