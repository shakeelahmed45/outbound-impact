generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                 String    @id @default(uuid())
  email              String    @unique
  password           String
  name               String
  role               Role      @default(INDIVIDUAL)
  stripeCustomerId   String?   @unique
  subscriptionId     String?
  subscriptionStatus String?
  priceId            String?
  currentPeriodStart DateTime?
  currentPeriodEnd   DateTime?
  storageUsed        BigInt    @default(0)
  storageLimit       BigInt    @default(2147483648)
  profilePicture     String?
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt

  // ✅ ADD THESE TWO LINES:
  resetToken         String?
  resetTokenExpiry   DateTime?

  items             Item[]
  campaigns         Campaign[]
  teamMembers       TeamMember[]       @relation("OrganizationMembers")
  memberOf          TeamMember[]       @relation("MemberOf")
  feedback          Feedback[]
  chatConversations ChatConversation[]

  @@index([email])
  @@index([resetToken])  // ✅ ADD THIS LINE TOO

}

enum Role {
  INDIVIDUAL
  ORG_SMALL
  ORG_MEDIUM
  ORG_ENTERPRISE
  ADMIN
}

model Item {
  id           String    @id @default(uuid())
  userId       String
  slug         String    @unique
  title        String
  description  String?   @db.Text
  type         MediaType
  mediaUrl     String    @db.Text
  qrCodeUrl    String?
  thumbnailUrl String?
  fileSize     BigInt
  views        Int       @default(0)
  viewsQr      Int       @default(0)
  viewsNfc     Int       @default(0)
  viewsDirect  Int       @default(0)
  nfcEnabled   Boolean   @default(false)
  nfcUrl       String?

  buttonText  String?
  buttonUrl   String?
  attachments Json?   @db.JsonB

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user       User        @relation(fields: [userId], references: [id])
  campaign   Campaign?   @relation(fields: [campaignId], references: [id])
  campaignId String?
  analytics  Analytics[]

  @@index([userId])
  @@index([slug])
}

enum MediaType {
  IMAGE
  VIDEO
  AUDIO
  TEXT
  EMBED
  OTHER
}

model Campaign {
  id          String   @id @default(uuid())
  slug        String   @unique
  name        String
  description String?
  category    String?
  logoUrl     String?  // ✅ ADD THIS LINE
  qrCodeUrl   String?
  userId      String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user  User   @relation(fields: [userId], references: [id])
  items Item[]

  @@index([userId])
  @@index([slug])
  @@index([category])
}

model TeamMember {
  id           String   @id @default(uuid())
  email        String
  role         String
  userId       String
  memberUserId String?
  status       String   @default("PENDING")
  token        String?  @unique
  message      String?  // ✨ Custom invitation message
  createdAt    DateTime @default(now())

  user       User  @relation(fields: [userId], references: [id], onDelete: Cascade, name: "OrganizationMembers")
  memberUser User? @relation(fields: [memberUserId], references: [id], onDelete: Cascade, name: "MemberOf")

  @@unique([userId, email])
  @@index([userId])
  @@index([memberUserId])
  @@index([token])
}

model Analytics {
  id        String   @id @default(uuid())
  itemId    String
  source    String   @default("direct")
  country   String?
  device    String?
  browser   String?
  os        String?
  createdAt DateTime @default(now())

  item Item @relation(fields: [itemId], references: [id], onDelete: Cascade)

  @@index([itemId])
  @@index([source])
  @@index([createdAt])
}

model Feedback {
  id        String         @id @default(uuid())
  userId    String
  subject   String
  message   String
  status    FeedbackStatus @default(PENDING)
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([status])
  @@index([createdAt])
}

enum FeedbackStatus {
  PENDING
  REVIEWED
  RESOLVED
}

model ChatConversation {
  id            String     @id @default(uuid())
  userId        String
  status        ChatStatus @default(ACTIVE)
  lastMessageAt DateTime   @default(now())
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt

  user     User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  messages ChatMessage[]

  @@index([userId])
  @@index([status])
  @@index([lastMessageAt])
}

enum ChatStatus {
  ACTIVE
  CLOSED
}

model ChatMessage {
  id             String     @id @default(uuid())
  conversationId String
  senderId       String
  senderType     SenderType
  message        String
  isRead         Boolean    @default(false)
  createdAt      DateTime   @default(now())

  conversation ChatConversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  @@index([conversationId])
  @@index([createdAt])
}

enum SenderType {
  USER
  ADMIN
}
