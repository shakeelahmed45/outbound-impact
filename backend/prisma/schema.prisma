generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                 String    @id @default(uuid())
  email              String    @unique
  password           String
  name               String
  role               Role      @default(INDIVIDUAL)
  stripeCustomerId   String?   @unique
  subscriptionId     String?
  subscriptionStatus String?
  priceId            String?
  currentPeriodStart DateTime?
  currentPeriodEnd   DateTime?
  storageUsed        BigInt    @default(0)
  storageLimit       BigInt    @default(2147483648)
  profilePicture     String?
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt

  resetToken         String?
  resetTokenExpiry   DateTime?

  // Enterprise features fields
  twoFactorEnabled   Boolean   @default(false)
  twoFactorSecret    String?

  // âœ… REFUND TRACKING FIELDS (Account will be deleted after refund)
  refundRequested    Boolean?   @default(false)
  refundRequestedAt  DateTime?
  refundProcessedAt  DateTime?
  refundAmount       Decimal?   @db.Decimal(10, 2)
  refundReason       String?    @db.Text
  refundStatus       String?    // 'pending', 'processed'

  // âœ… PHASE 2: USER MANAGEMENT FIELDS
  status             String?    @default("active")  // active, suspended, banned, deleted
  deletedAt          DateTime?                      // Timestamp when user was deleted
  lastLoginAt        DateTime?                      // Last successful login timestamp

  items             Item[]
  campaigns         Campaign[]
  teamMembers       TeamMember[]       @relation("OrganizationMembers")
  memberOf          TeamMember[]       @relation("MemberOf")
  feedback          Feedback[]
  chatConversations ChatConversation[]

  // Enterprise features relations
  apiKeys              ApiKey[]
  whiteLabelSettings   WhiteLabelSettings?
  webhooks             Webhook[]
  integrations         Integration[]
  auditLogs            AuditLog[]

  @@index([email])
  @@index([resetToken])
  @@index([status])  // âœ… PHASE 2: Index for faster status queries
}

enum Role {
  INDIVIDUAL
  ORG_SMALL
  ORG_MEDIUM
  ORG_ENTERPRISE
  ADMIN
}

model Item {
  id           String    @id @default(uuid())
  userId       String
  slug         String    @unique
  title        String
  description  String?   @db.Text
  type         MediaType
  mediaUrl     String    @db.Text
  qrCodeUrl    String?
  thumbnailUrl String?
  fileSize     BigInt
  views        Int       @default(0)
  viewsQr      Int       @default(0)
  viewsNfc     Int       @default(0)
  viewsDirect  Int       @default(0)
  nfcEnabled   Boolean   @default(false)
  nfcUrl       String?

  buttonText  String?
  buttonUrl   String?
  attachments Json?   @db.JsonB

  // âœ… NEW: Sharing control field
  sharingEnabled Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user       User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  campaign   Campaign?   @relation(fields: [campaignId], references: [id])
  campaignId String?
  analytics  Analytics[]

  @@index([userId])
  @@index([slug])
  @@index([sharingEnabled])
}

enum MediaType {
  IMAGE
  VIDEO
  AUDIO
  TEXT
  EMBED
  OTHER
}

model Campaign {
  id          String   @id @default(uuid())
  slug        String   @unique
  name        String
  description String?
  category    String?
  logoUrl     String?
  qrCodeUrl   String?
  userId      String
  
  // ðŸ”’ PASSWORD PROTECTION FIELDS
  passwordProtected Boolean  @default(false)
  passwordHash      String?
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user  User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  items Item[]

  @@index([userId])
  @@index([slug])
  @@index([category])
  @@index([passwordProtected])
}

model TeamMember {
  id           String   @id @default(uuid())
  email        String
  role         String
  userId       String
  memberUserId String?
  status       String   @default("PENDING")
  token        String?  @unique
  message      String?
  createdAt    DateTime @default(now())

  user       User  @relation(fields: [userId], references: [id], onDelete: Cascade, name: "OrganizationMembers")
  memberUser User? @relation(fields: [memberUserId], references: [id], onDelete: Cascade, name: "MemberOf")

  @@unique([userId, email])
  @@index([userId])
  @@index([memberUserId])
  @@index([token])
}

model Analytics {
  id        String   @id @default(uuid())
  itemId    String
  source    String   @default("direct")
  country   String?
  device    String?
  browser   String?
  os        String?
  createdAt DateTime @default(now())

  item Item @relation(fields: [itemId], references: [id], onDelete: Cascade)

  @@index([itemId])
  @@index([source])
  @@index([createdAt])
}

model Feedback {
  id        String         @id @default(uuid())
  userId    String
  subject   String
  message   String
  status    FeedbackStatus @default(PENDING)
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([status])
  @@index([createdAt])
}

enum FeedbackStatus {
  PENDING
  REVIEWED
  RESOLVED
}

// ========================================
// ðŸ’¬ LIVE CHAT MODELS (UPDATED WITH AI)
// ========================================

model ChatConversation {
  id            String     @id @default(uuid())
  userId        String
  status        ChatStatus @default(ACTIVE)
  lastMessageAt DateTime   @default(now())
  
  // ðŸ¤– AI CHATBOT FIELDS
  isAiHandling        Boolean   @default(true)   // Is AI bot handling this conversation?
  escalatedToHumanAt  DateTime?                  // When escalated to human support
  escalationReason    String?                    // Why it was escalated
  
  // ðŸ†• NEW: FEEDBACK FIELDS (Feature 4: Feedback Modal)
  feedbackRating      Int?                       // 1-5 star rating
  feedbackComment     String?   @db.Text         // Optional feedback comment
  
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt

  user         User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  messages     ChatMessage[]
  botAnalytics ChatBotAnalytics[]

  @@index([userId])
  @@index([status])
  @@index([lastMessageAt])
  @@index([isAiHandling])
}

enum ChatStatus {
  ACTIVE
  CLOSED
}

model ChatMessage {
  id             String     @id @default(uuid())
  conversationId String
  senderId       String
  senderType     SenderType
  message        String     @db.Text
  isRead         Boolean    @default(false)
  
  // ðŸ¤– AI AND FILE FIELDS
  isAiGenerated  Boolean   @default(false)           // Was this message from AI bot?
  hasAttachments Boolean   @default(false)           // Does message have file attachments?
  aiConfidence   Decimal?  @db.Decimal(3, 2)        // AI confidence score (0.00-1.00)
  
  createdAt      DateTime  @default(now())

  conversation ChatConversation  @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  attachments  ChatAttachment[]
  botAnalytics ChatBotAnalytics?

  @@index([conversationId])
  @@index([createdAt])
  @@index([isAiGenerated])
  @@index([hasAttachments])
}

enum SenderType {
  USER
  ADMIN
}

// ========================================
// ðŸ¤– AI CHATBOT KNOWLEDGE BASE
// ========================================

model ChatKnowledgeBase {
  id          String   @id @default(uuid())
  category    String   // Upload, QR Codes, NFC, Billing, etc.
  question    String   @db.Text // The FAQ question
  answer      String   @db.Text // The answer
  keywords    String[] // Keywords for matching
  priority    Int      @default(0) // Higher = better match
  isActive    Boolean  @default(true)
  usageCount  Int      @default(0) // Track how often used
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([category])
  @@index([isActive])
}

// ========================================
// ðŸŽ¯ AI INTENT DETECTION
// ========================================

model ChatIntent {
  id            String   @id @default(uuid())
  name          String   @unique // e.g., "help_upload", "billing_issue"
  description   String   @db.Text
  patterns      String[] // Text patterns to detect intent
  response      String   @db.Text // Auto-response for this intent
  requiresHuman Boolean  @default(false) // Auto-escalate to human?
  priority      Int      @default(0)
  isActive      Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([name])
  @@index([isActive])
}

// ========================================
// ðŸ“Ž CHAT FILE ATTACHMENTS
// ========================================

model ChatAttachment {
  id           String      @id @default(uuid())
  messageId    String
  fileName     String
  fileType     String      // MIME type: image/png, application/pdf, etc.
  fileSize     BigInt      // File size in bytes
  fileUrl      String      @db.Text // CDN URL (Bunny.net)
  thumbnailUrl String?     // Thumbnail for images
  uploadedBy   String      // User ID who uploaded
  createdAt    DateTime    @default(now())

  message ChatMessage @relation(fields: [messageId], references: [id], onDelete: Cascade)

  @@index([messageId])
  @@index([uploadedBy])
}

// ========================================
// ðŸ“Š AI BOT ANALYTICS
// ========================================

model ChatBotAnalytics {
  id              String   @id @default(uuid())
  conversationId  String
  messageId       String   @unique
  intent          String?  // Detected intent
  knowledgeBaseId String?  // Which FAQ was used
  confidence      Decimal? @db.Decimal(3, 2) // Bot confidence (0.00-1.00)
  wasHelpful      Boolean? // User feedback
  escalated       Boolean  @default(false)
  responseTime    Int?     // Response time in milliseconds
  createdAt       DateTime @default(now())

  conversation ChatConversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  message      ChatMessage      @relation(fields: [messageId], references: [id], onDelete: Cascade)

  @@index([conversationId])
  @@index([createdAt])
}

// ========================================
// ENTERPRISE FEATURES MODELS
// ========================================

model ApiKey {
  id          String   @id @default(uuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  name        String
  key         String   @unique
  lastUsed    DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([userId])
  @@index([key])
}

model WhiteLabelSettings {
  id              String   @id @default(uuid())
  userId          String   @unique
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  primaryColor    String   @default("#800080")
  secondaryColor  String   @default("#EE82EE")
  accentColor     String   @default("#9333ea")
  customDomain    String?
  emailFromName   String?
  emailReplyTo    String?
  footerText      String   @default("Powered by Outbound Impact")
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Webhook {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  name      String
  url       String
  events    String[]
  active    Boolean  @default(true)
  secret    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([userId])
}

model Integration {
  id            String   @id @default(uuid())
  userId        String
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  type          String
  name          String
  config        Json
  active        Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  @@index([userId])
  @@index([type])
  @@unique([userId, type])
}

model AuditLog {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  action    String
  ipAddress String?
  location  String?
  device    String?
  metadata  Json?
  createdAt DateTime @default(now())
  
  @@index([userId])
  @@index([createdAt])
}
