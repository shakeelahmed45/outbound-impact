generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                 String    @id @default(uuid())
  email              String    @unique
  password           String
  name               String
  role               Role      @default(INDIVIDUAL)
  stripeCustomerId   String?   @unique
  subscriptionId     String?
  subscriptionStatus String?
  priceId            String?
  currentPeriodStart DateTime?
  currentPeriodEnd   DateTime?
  storageUsed        BigInt    @default(0)
  storageLimit       BigInt    @default(2147483648)
  profilePicture     String?
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt

  resetToken         String?
  resetTokenExpiry   DateTime?

  // Enterprise features fields
  twoFactorEnabled   Boolean   @default(false)
  twoFactorSecret    String?

  // REFUND TRACKING FIELDS
  refundRequested    Boolean?   @default(false)
  refundRequestedAt  DateTime?
  refundProcessedAt  DateTime?
  refundAmount       Decimal?   @db.Decimal(10, 2)
  refundReason       String?    @db.Text
  refundStatus       String?

  // PHASE 2: USER MANAGEMENT FIELDS
  status             String?    @default("active")
  deletedAt          DateTime?
  lastLoginAt        DateTime?

  items             Item[]
  campaigns         Campaign[]
  teamMembers       TeamMember[]       @relation("OrganizationMembers")
  memberOf          TeamMember[]       @relation("MemberOf")
  feedback          Feedback[]
  organizations     Organization[]
  chatConversations ChatConversation[]

  // üÜï PHASE 3: Admin invitation relation
  adminInvitations  AdminInvitation[]

  // Enterprise features relations
  apiKeys              ApiKey[]
  whiteLabelSettings   WhiteLabelSettings?
  webhooks             Webhook[]
  integrations         Integration[]
  auditLogs            AuditLog[]
  notifications        Notification[]
  cohorts              Cohort[]
  workflows            Workflow[]

  // üì¨ Inbox messaging relations
  sentMessages      Message[] @relation("MessageSender")
  receivedMessages  Message[] @relation("MessageRecipient")

  @@index([email])
  @@index([resetToken])
  @@index([status])
  @@index([role])
}

enum Role {
  INDIVIDUAL
  ORG_SMALL
  ORG_MEDIUM
  ORG_ENTERPRISE
  ADMIN
  CUSTOMER_SUPPORT
}

model Item {
  id           String    @id @default(uuid())
  userId       String
  slug         String    @unique
  title        String
  description  String?   @db.Text
  type         MediaType
  mediaUrl     String    @db.Text
  qrCodeUrl    String?
  thumbnailUrl String?
  fileSize     BigInt
  views        Int       @default(0)
  viewsQr      Int       @default(0)
  viewsNfc     Int       @default(0)
  viewsDirect  Int       @default(0)
  nfcEnabled   Boolean   @default(false)
  nfcUrl       String?

  organizationId String?
  organization   Organization? @relation(fields: [organizationId], references: [id], onDelete: SetNull)

  buttonText  String?
  buttonUrl   String?
  attachments Json?   @db.JsonB

  sharingEnabled Boolean @default(true)

  status           String  @default("PUBLISHED")
  uploadedByUserId String?
  uploadedByEmail  String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user       User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  campaign   Campaign?   @relation(fields: [campaignId], references: [id])
  campaignId String?
  analytics  Analytics[]

  @@index([userId])
  @@index([slug])
  @@index([sharingEnabled])
  @@index([status])
  @@index([organizationId])
}

enum MediaType {
  IMAGE
  VIDEO
  AUDIO
  TEXT
  EMBED
  OTHER
}

model Campaign {
  id          String   @id @default(uuid())
  slug        String   @unique
  name        String
  description String?
  category    String?
  logoUrl     String?
  qrCodeUrl   String?
  userId      String

  organizationId String?
  organization   Organization? @relation(fields: [organizationId], references: [id], onDelete: SetNull)
  
  passwordProtected Boolean  @default(false)
  passwordHash      String?

  itemOrder   String[] @default([])
  views       Int      @default(0)
  viewsQr     Int      @default(0)
  viewsNfc    Int      @default(0)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user          User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  items         Item[]
  cohortStreams  CohortStream[]

  @@index([userId])
  @@index([slug])
  @@index([category])
  @@index([passwordProtected])
  @@index([organizationId])
}

model TeamMember {
  id           String   @id @default(uuid())
  email        String
  role         String
  userId       String
  memberUserId String?
  status       String   @default("PENDING")
  token        String?  @unique
  message      String?
  allowedFeatures Json?
  roleChangeRequested    Boolean   @default(false)
  requestedRole          String?
  roleChangeNote         String?   @db.Text
  roleChangeRequestedAt  DateTime?
  createdAt    DateTime @default(now())

  organizationAssignments OrganizationMember[]

  user       User  @relation(fields: [userId], references: [id], onDelete: Cascade, name: "OrganizationMembers")
  memberUser User? @relation(fields: [memberUserId], references: [id], onDelete: Cascade, name: "MemberOf")

  @@unique([userId, email])
  @@index([userId])
  @@index([memberUserId])
  @@index([token])
}

model Analytics {
  id        String   @id @default(uuid())
  itemId    String
  source    String   @default("direct")
  country   String?
  device    String?
  browser   String?
  os        String?
  createdAt DateTime @default(now())

  item Item @relation(fields: [itemId], references: [id], onDelete: Cascade)

  @@index([itemId])
  @@index([source])
  @@index([createdAt])
}

model Feedback {
  id        String         @id @default(uuid())
  userId    String
  subject   String
  message   String
  status    FeedbackStatus @default(PENDING)
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([status])
  @@index([createdAt])
}

enum FeedbackStatus {
  PENDING
  REVIEWED
  RESOLVED
}

// ========================================
// üí¨ LIVE CHAT MODELS
// ========================================

model ChatConversation {
  id            String     @id @default(uuid())
  userId        String
  status        ChatStatus @default(ACTIVE)
  lastMessageAt DateTime   @default(now())
  
  isAiHandling        Boolean   @default(true)
  escalatedToHumanAt  DateTime?
  escalationReason    String?
  
  feedbackRating      Int?
  feedbackComment     String?   @db.Text
  
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt

  user         User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  messages     ChatMessage[]
  botAnalytics ChatBotAnalytics[]

  @@index([userId])
  @@index([status])
  @@index([lastMessageAt])
  @@index([isAiHandling])
  @@index([feedbackRating])
}

enum ChatStatus {
  ACTIVE
  CLOSED
}

model ChatMessage {
  id             String     @id @default(uuid())
  conversationId String
  senderId       String
  senderType     SenderType
  message        String     @db.Text
  isRead         Boolean    @default(false)
  
  isAiGenerated  Boolean   @default(false)
  hasAttachments Boolean   @default(false)
  aiConfidence   Decimal?  @db.Decimal(3, 2)
  
  createdAt      DateTime  @default(now())

  conversation ChatConversation  @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  attachments  ChatAttachment[]
  botAnalytics ChatBotAnalytics?

  @@index([conversationId])
  @@index([createdAt])
  @@index([isAiGenerated])
  @@index([hasAttachments])
}

enum SenderType {
  USER
  ADMIN
}

model ChatKnowledgeBase {
  id          String   @id @default(uuid())
  category    String
  question    String   @db.Text
  answer      String   @db.Text
  keywords    String[]
  priority    Int      @default(0)
  isActive    Boolean  @default(true)
  usageCount  Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([category])
  @@index([isActive])
}

model ChatIntent {
  id            String   @id @default(uuid())
  name          String   @unique
  description   String   @db.Text
  patterns      String[]
  response      String   @db.Text
  requiresHuman Boolean  @default(false)
  priority      Int      @default(0)
  isActive      Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([name])
  @@index([isActive])
}

model ChatAttachment {
  id           String      @id @default(uuid())
  messageId    String
  fileName     String
  fileType     String
  fileSize     BigInt
  fileUrl      String      @db.Text
  thumbnailUrl String?
  uploadedBy   String
  createdAt    DateTime    @default(now())

  message ChatMessage @relation(fields: [messageId], references: [id], onDelete: Cascade)

  @@index([messageId])
  @@index([uploadedBy])
}

model ChatBotAnalytics {
  id              String   @id @default(uuid())
  conversationId  String
  messageId       String   @unique
  intent          String?
  knowledgeBaseId String?
  confidence      Decimal? @db.Decimal(3, 2)
  wasHelpful      Boolean?
  escalated       Boolean  @default(false)
  responseTime    Int?
  createdAt       DateTime @default(now())

  conversation ChatConversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  message      ChatMessage      @relation(fields: [messageId], references: [id], onDelete: Cascade)

  @@index([conversationId])
  @@index([createdAt])
}

// ========================================
// üÜï PHASE 3: ADMIN INVITATION MODEL
// ========================================

model AdminInvitation {
  id          String   @id @default(uuid())
  email       String
  role        Role
  token       String   @unique
  invitedBy   String
  status      String   @default("PENDING")
  expiresAt   DateTime
  createdAt   DateTime @default(now())
  
  inviter     User @relation(fields: [invitedBy], references: [id], onDelete: Cascade)
  
  @@unique([email, status])
  @@index([token])
  @@index([email])
  @@index([status])
}

// ========================================
// ENTERPRISE FEATURES MODELS
// ========================================

model ApiKey {
  id          String   @id @default(uuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  name        String
  key         String   @unique
  lastUsed    DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([userId])
  @@index([key])
}

model WhiteLabelSettings {
  id              String   @id @default(uuid())
  userId          String   @unique
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  primaryColor    String   @default("#800080")
  secondaryColor  String   @default("#EE82EE")
  accentColor     String   @default("#9333ea")
  customDomain    String?
  emailFromName   String?
  emailReplyTo    String?
  footerText      String   @default("Powered by Outbound Impact")
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Webhook {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  name      String
  url       String
  events    String[]
  active    Boolean  @default(true)
  secret    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([userId])
}

model Integration {
  id            String   @id @default(uuid())
  userId        String
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  type          String
  name          String
  config        Json
  active        Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  @@index([userId])
  @@index([type])
  @@unique([userId, type])
}

model AuditLog {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  action    String
  ipAddress String?
  location  String?
  device    String?
  metadata  Json?
  createdAt DateTime @default(now())
  
  @@index([userId])
  @@index([createdAt])
}

// ========================================
// üîî NOTIFICATIONS
// ========================================

model Notification {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  type      String   @default("info")
  category  String   @default("general")
  title     String
  message   String
  read      Boolean  @default(false)
  metadata  Json?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([userId, read])
  @@index([createdAt])
  @@index([category])
}

// ========================================
// üéØ COHORT FEATURE
// ========================================

model Cohort {
  id          String   @id @default(uuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  name        String
  description String?
  slug        String   @unique
  qrCodeUrl   String?
  status      String   @default("active")

  organizationId String?
  organization   Organization? @relation(fields: [organizationId], references: [id], onDelete: SetNull)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  members     CohortMember[]
  streams     CohortStream[]

  @@index([userId])
  @@index([slug])
  @@index([status])
  @@index([organizationId])
}

model CohortMember {
  id        String   @id @default(uuid())
  cohortId  String
  cohort    Cohort   @relation(fields: [cohortId], references: [id], onDelete: Cascade)
  name      String?
  email     String?
  phone     String?
  createdAt DateTime @default(now())

  @@index([cohortId])
  @@unique([cohortId, email])
}

model CohortStream {
  id         String   @id @default(uuid())
  cohortId   String
  cohort     Cohort   @relation(fields: [cohortId], references: [id], onDelete: Cascade)
  campaignId String
  campaign   Campaign @relation(fields: [campaignId], references: [id], onDelete: Cascade)
  createdAt  DateTime @default(now())

  @@unique([cohortId, campaignId])
  @@index([cohortId])
  @@index([campaignId])
}

model Workflow {
  id               String    @id @default(uuid())
  userId           String
  submittedById    String
  submittedByName  String?
  submittedByEmail String?

  assetName        String
  assetType        String?
  assetUrl         String?   @db.Text
  itemId           String?
  campaignId       String?

  status           String    @default("DRAFT")
  version          String    @default("v1.0")
  feedback         String?   @db.Text
  comments         Int       @default(0)

  reviewedBy       String?
  reviewedAt       DateTime?
  submittedAt      DateTime?
  approvedAt       DateTime?

  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  user             User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([status])
  @@index([submittedById])
}

// ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê
// üè¢ ORGANIZATION FEATURE
// ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê

model Organization {
  id          String   @id @default(uuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  name        String
  description String?  @db.Text
  color       String   @default("#7c3aed")
  icon        String   @default("folder")
  status      String   @default("active")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  items       Item[]
  campaigns   Campaign[]
  cohorts     Cohort[]
  members     OrganizationMember[]

  @@index([userId])
  @@index([status])
}

model OrganizationMember {
  id             String       @id @default(uuid())
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  teamMemberId   String
  teamMember     TeamMember   @relation(fields: [teamMemberId], references: [id], onDelete: Cascade)
  createdAt      DateTime     @default(now())

  @@unique([organizationId, teamMemberId])
  @@index([organizationId])
  @@index([teamMemberId])
}

// ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê
// üì¨ INBOX MESSAGING
// ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê

model Message {
  id          String   @id @default(uuid())
  senderId    String
  recipientId String?

  type        String   @default("internal")

  toEmail     String?
  fromName    String?

  subject     String
  body        String   @db.Text

  read        Boolean  @default(false)
  starred     Boolean  @default(false)
  archived    Boolean  @default(false)

  parentId    String?
  parent      Message? @relation("MessageReplies", fields: [parentId], references: [id], onDelete: SetNull)
  replies     Message[] @relation("MessageReplies")

  emailStatus String?  @default("pending")
  emailId     String?

  metadata    Json?

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  sender      User     @relation("MessageSender", fields: [senderId], references: [id], onDelete: Cascade)
  recipient   User?    @relation("MessageRecipient", fields: [recipientId], references: [id], onDelete: Cascade)

  @@index([senderId])
  @@index([recipientId])
  @@index([type])
  @@index([read])
  @@index([createdAt])
  @@index([parentId])
}
